{
  "name": "electron-react-typescript",
  "version": "1.0.0",
  "description": "Electron+React+Typescript minimal starter",
  "author": "Brendon Cambu√≠ <brendon@cambui.dev> (https://github.com/brcambui)",
  "license": "MIT",
  "main": "./build/main/main.js",
  "scripts": {
    "build": "yarn main:build && yarn renderer:build && yarn electron:build",
    "dev": "concurrently \"yarn renderer:dev\" \"wait-on http://localhost:3000/ && yarn main:dev\"",
    "main:build": "webpack --config config/main/webpack.prod.js",
    "main:dev": "webpack --config config/main/webpack.dev.js",
    "renderer:build": "webpack --config config/renderer/webpack.prod.js",
    "renderer:dev": "webpack serve --config config/renderer/webpack.dev.js",
    "electron:build": "electron-builder -p never --config config/electron-builder.json"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "reflexbox": "^4.0.6",
    "styled-components": "^5.3.5"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/node": "^7.16.8",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/reflexbox": "^4.0.4",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.30.4",
    "@typescript-eslint/parser": "^5.30.4",
    "babel-loader": "^8.2.4",
    "concurrently": "^7.1.0",
    "css-loader": "^6.7.1",
    "electron": "^18.0.3",
    "electron-builder": "^22.14.13",
    "eslint": "^8.19.0",
    "eslint-plugin-react": "^7.30.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "image-webpack-loader": "^8.1.0",
    "nodemon": "^2.0.15",
    "nodemon-webpack-plugin": "^4.7.1",
    "sass": "^1.50.0",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "wait-on": "^6.0.1",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1"
  },
  "repository": "https://github.com/Biahellens/electron-react-typescript.git"
}
